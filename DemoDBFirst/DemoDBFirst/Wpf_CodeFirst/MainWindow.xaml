<Window x:Class="Wpf_CodeFirst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_CodeFirst"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="CategoryID" Grid.Row="0"/>
        <TextBox Height="25" Width="300" Grid.Row="0"/>
        <Label Content="CategoryName" Grid.Row="1"/>
        <TextBox Height="25" Width="300" Grid.Row="1"/>
        <ListView Grid.Row="2" Width="450">
            
        </ListView>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Insert" Width="80" Height="25" Margin="10"/>
            <Button Content="Update" Width="80" Height="25" Margin="10"/>
            <Button Content="Delete" Width="80" Height="25" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
